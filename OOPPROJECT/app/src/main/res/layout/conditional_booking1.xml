<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.liuxizhen.oopproject.conditional_booking1"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <Spinner
        android:id="@+id/time_spinner"
        android:layout_width="206dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/movies_spinner"
        app:layout_constraintHorizontal_bias="0.497" />

    <Spinner
        android:id="@+id/movies_spinner"
        android:layout_width="206dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp" />

    <EditText
        android:id="@+id/number_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="請輸入張數"
        android:inputType="number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/time_spinner" />

    <Button
        android:id="@+id/confirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="繼續"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="80dp"
        app:layout_constraintHorizontal_bias="0.498" />

    <CheckBox
        android:id="@+id/checkcontinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="同排連續"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/number_input"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/number_input"
        android:layout_marginStart="8dp" />

    <CheckBox
        android:id="@+id/checkassign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="指定區域"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/number_input"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/number_input"
        android:layout_marginEnd="8dp" />

    <CheckBox
        android:id="@+id/checkassignrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="指定排數"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/checkcontinue"
        app:layout_constraintRight_toRightOf="@+id/checkcontinue"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/checkcontinue"
        android:layout_marginStart="8dp" />

</android.support.constraint.ConstraintLayout>
